---
import Navigation from "../components/Navigation.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css";
import { defaultLang, type Language } from "@/i18n";

interface Props {
  title?: string;
  description?: string;
  currentPath?: string;
  lang?: Language;
}

const {
  title = "Slice - Building Apps That Matter",
  description = "We're a passionate startup team building innovative apps that make a difference.",
  currentPath = Astro.url.pathname,
  lang = defaultLang,
} = Astro.props;
---

<!doctype html>
<html lang={lang} class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <script is:inline>
      const getThemePreference = () => {
        if (
          typeof localStorage !== "undefined" &&
          localStorage.getItem("theme")
        ) {
          return localStorage.getItem("theme");
        }
        return window.matchMedia("(prefers-color-scheme: light)").matches
          ? "light"
          : "dark";
      };

      const applyTheme = () => {
        const theme = getThemePreference();
        if (theme === "dark") {
          document.documentElement.classList.add("dark");
        } else {
          document.documentElement.classList.remove("dark");
        }
      };

      // Apply theme immediately
      applyTheme();

      // Restore theme after view transitions
      document.addEventListener("astro:page-load", applyTheme);
      document.addEventListener("astro:after-swap", applyTheme);
    </script>
  </head>
  <body
    class="min-h-screen bg-cream-50 dark:bg-dark-950 text-dark-900 dark:text-cream-100 antialiased transition-colors duration-300"
  >
    <Navigation currentPath={currentPath} lang={lang} />
    <main class="pt-20">
      <slot />
    </main>
    <Footer lang={lang} />
  </body>
</html>
