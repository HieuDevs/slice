---
import Layout from "../../layouts/Layout.astro";
import {
  languages,
  useTranslations,
  getLocalizedPath,
  type Language,
} from "../../i18n";

const teamImages = import.meta.glob<{ default: ImageMetadata }>(
  "../../assets/test_*.png",
  { eager: true }
);
const [test0, test1, test2, test3, test4] = Object.values(teamImages).map(
  (img) => img.default
);

export const prerender = true;

export function getStaticPaths() {
  return Object.keys(languages).map((lang) => ({
    params: { lang },
  }));
}

// Get lang from URL params (SSG-safe, no headers needed)
const { lang } = Astro.params as { lang: Language };
const t = useTranslations(lang);

const teamMembers = [
  {
    name: "Hieu Bui",
    role: "CTO & Founder",
    bioKey: "about.team.hieu.bio",
    image: test0.src,
    social: {
      twitter: "#",
      linkedin: "#",
      github: "#",
    },
    color: "from-slice-400 to-slice-600",
    borderColor: "border-slice-400",
    borderHoverColor: "group-hover:border-slice-500",
  },
  {
    name: "Nhi Bao",
    role: "Marketing Manager",
    bioKey: "about.team.nhi.bio",
    image: test1.src,
    social: {
      twitter: "#",
      linkedin: "#",
      github: "#",
    },
    color: "from-purple-400 to-purple-600",
    borderColor: "border-purple-400",
    borderHoverColor: "group-hover:border-purple-500",
  },
  {
    name: "Hung Ngo",
    role: "Marketing Leader",
    bioKey: "about.team.hung.bio",
    image: test2.src,
    social: {
      twitter: "#",
      linkedin: "#",
      github: "#",
    },
    color: "from-emerald-400 to-emerald-600",
    borderColor: "border-emerald-400",
    borderHoverColor: "group-hover:border-emerald-500",
  },
  {
    name: "Son Minh",
    role: "Designer",
    bioKey: "about.team.son.bio",
    image: test3.src,
    social: {
      twitter: "#",
      linkedin: "#",
      github: "#",
    },
    color: "from-rose-400 to-rose-600",
    borderColor: "border-rose-400",
    borderHoverColor: "group-hover:border-rose-500",
  },
  {
    name: "Phu Minh",
    role: "Designer",
    bioKey: "about.team.phu.bio",
    image: test4.src,
    social: {
      twitter: "#",
      linkedin: "#",
      github: "#",
    },
    color: "from-blue-400 to-blue-600",
    borderColor: "border-blue-400",
    borderHoverColor: "group-hover:border-blue-500",
  },
];

const values = [
  {
    icon: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/></svg>`,
    title: t("about.values.innovation.title"),
    description: t("about.values.innovation.desc"),
  },
  {
    icon: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/></svg>`,
    title: t("about.values.team.title"),
    description: t("about.values.team.desc"),
  },
  {
    icon: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/></svg>`,
    title: t("about.values.user.title"),
    description: t("about.values.user.desc"),
  },
];
---

<Layout
  title="About Us - Slice"
  currentPath={getLocalizedPath("/about", lang)}
  lang={lang}
>
  <section
    class="py-24 bg-linear-to-b from-cream-100 to-cream-50 dark:from-dark-900 dark:to-dark-950 relative overflow-hidden"
  >
    <div
      class="absolute top-0 right-0 w-[500px] h-[500px] bg-slice-400/10 rounded-full blur-3xl"
    >
    </div>
    <div
      class="absolute bottom-0 left-0 w-[400px] h-[400px] bg-purple-400/10 rounded-full blur-3xl"
    >
    </div>

    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-20">
        <div
          class="inline-flex items-center gap-2 px-4 py-2 bg-slice-100 dark:bg-slice-900/30 rounded-full text-slice-700 dark:text-slice-400 font-medium text-sm mb-6 opacity-0 animate-fade-in"
        >
          <svg
            class="w-4 h-4"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"
            ></path>
          </svg>
          {t("about.badge")}
        </div>
        <h1
          class="section-title mb-6 opacity-0 animate-slide-up animation-delay-100"
        >
          {t("about.title")}
          <span class="gradient-text">{t("about.titleHighlight")}</span>
        </h1>
        <p
          class="section-subtitle mx-auto opacity-0 animate-slide-up animation-delay-200"
        >
          {t("about.subtitle")}
        </p>
      </div>
    </div>
  </section>

  <section class="py-20 bg-cream-50 dark:bg-dark-950">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div
        class="grid sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 gap-4 lg:gap-5"
      >
        {
          teamMembers.map((member, index) => (
            <div
              class="group relative opacity-0 animate-slide-up"
              style={`animation-delay: ${index * 100}ms`}
            >
              <div
                class={`relative rounded-xl overflow-hidden shadow-card group-hover:shadow-card-hover transition-all duration-500 border-2 border-transparent ${member.borderHoverColor} aspect-3/4`}
              >
                <img
                  src={member.image}
                  alt={member.name}
                  class="w-full h-full object-contain transition-transform duration-700 group-hover:scale-110"
                />
                <div class="absolute bottom-0 left-0 right-0 backdrop-blur-md bg-black/40 p-4">
                  <div class="flex flex-col items-center text-center">
                    <h3 class="font-display text-lg font-bold text-white mb-1">
                      {member.name}
                    </h3>
                    <p class="text-white/90 text-xs font-medium mb-2">
                      {member.role}
                    </p>
                    <p class="text-white/80 text-xs leading-relaxed mb-3">
                      {t(member.bioKey as any)}
                    </p>
                  </div>

                  <div class="flex justify-center gap-2 pt-3 border-t border-white/20">
                    <a
                      href={member.social.twitter}
                      class="w-8 h-8 bg-white/10 hover:bg-white/20 backdrop-blur-sm rounded-lg flex items-center justify-center text-white transition-all duration-300 group/social"
                      aria-label="Twitter"
                    >
                      <svg
                        class="w-4 h-4 transition-transform duration-300 group-hover/social:scale-110"
                        fill="currentColor"
                        viewBox="0 0 24 24"
                      >
                        <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z" />
                      </svg>
                    </a>
                    <a
                      href={member.social.linkedin}
                      class="w-8 h-8 bg-white/10 hover:bg-white/20 backdrop-blur-sm rounded-lg flex items-center justify-center text-white transition-all duration-300 group/social"
                      aria-label="LinkedIn"
                    >
                      <svg
                        class="w-4 h-4 transition-transform duration-300 group-hover/social:scale-110"
                        fill="currentColor"
                        viewBox="0 0 24 24"
                      >
                        <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z" />
                      </svg>
                    </a>
                    <a
                      href={member.social.github}
                      class="w-8 h-8 bg-white/10 hover:bg-white/20 backdrop-blur-sm rounded-lg flex items-center justify-center text-white transition-all duration-300 group/social"
                      aria-label="GitHub"
                    >
                      <svg
                        class="w-4 h-4 transition-transform duration-300 group-hover/social:scale-110"
                        fill="currentColor"
                        viewBox="0 0 24 24"
                      >
                        <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" />
                      </svg>
                    </a>
                  </div>
                </div>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <section class="py-24 bg-white dark:bg-dark-900">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="section-title mb-4">
          {t("about.values.title")}
          <span class="gradient-text">{t("about.values.titleHighlight")}</span>
        </h2>
        <p class="section-subtitle mx-auto">
          {t("about.values.subtitle")}
        </p>
      </div>

      <div class="grid md:grid-cols-3 gap-8">
        {
          values.map((value, index) => (
            <div class="text-center p-8 rounded-3xl bg-cream-50 dark:bg-dark-800 hover:bg-linear-to-br hover:from-slice-50 hover:to-cream-100 dark:hover:from-dark-700 dark:hover:to-dark-800 transition-all duration-500 group">
              <div class="w-20 h-20 bg-white dark:bg-dark-700 rounded-2xl flex items-center justify-center mx-auto mb-6 text-slice-500 shadow-card group-hover:shadow-glow group-hover:scale-110 transition-all duration-500">
                <Fragment set:html={value.icon} />
              </div>
              <h3 class="font-display text-2xl font-bold text-dark-900 dark:text-cream-100 mb-4">
                {value.title}
              </h3>
              <p class="text-dark-500 dark:text-dark-400 leading-relaxed">
                {value.description}
              </p>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <section
    class="py-24 bg-linear-to-r from-dark-900 to-dark-950 text-white relative overflow-hidden"
  >
    <div class="absolute inset-0">
      <div
        class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[800px] h-[800px] bg-slice-500/10 rounded-full blur-3xl"
      >
      </div>
    </div>

    <div class="relative max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="font-display text-4xl md:text-5xl font-bold mb-6">
        {t("about.cta.title")}
        <span class="text-slice-400">{t("about.cta.titleHighlight")}</span>?
      </h2>
      <p class="text-xl text-dark-300 mb-10 max-w-2xl mx-auto">
        {t("about.cta.description")}
      </p>
      <a href="#" class="btn-primary">
        {t("about.cta.button")}
        <svg
          class="w-4 h-4 ml-2"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
        </svg>
      </a>
    </div>
  </section>
</Layout>
