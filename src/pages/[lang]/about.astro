---
import Layout from "../../layouts/Layout.astro";
import { Icon } from "astro-icon/components";
import {
  languages,
  useTranslations,
  getLocalizedPath,
  type Language,
} from "@/i18n";

const teamImages = import.meta.glob<{ default: ImageMetadata }>(
  "../../assets/test_*.png",
  { eager: true }
);
const [test0, test1, test2, test3, test4] = Object.values(teamImages).map(
  (img) => img.default
);

export const prerender = true;

export function getStaticPaths() {
  return Object.keys(languages).map((lang) => ({
    params: { lang },
  }));
}

// Get lang from URL params (SSG-safe, no headers needed)
const { lang } = Astro.params as { lang: Language };
const t = useTranslations(lang);

const teamMembers = [
  {
    name: "Hieu Bui",
    role: "CTO & Founder",
    bioKey: "about.team.hieu.bio",
    image: test0.src,
    social: {
      twitter: "#",
      linkedin: "#",
      github: "#",
    },
    color: "from-slice-400 to-slice-600",
    borderColor: "border-slice-400",
    borderHoverColor: "group-hover:border-slice-500",
  },
  {
    name: "Nhi Bao",
    role: "Marketing Manager",
    bioKey: "about.team.nhi.bio",
    image: test1.src,
    social: {
      twitter: "#",
      linkedin: "#",
      github: "#",
    },
    color: "from-purple-400 to-purple-600",
    borderColor: "border-purple-400",
    borderHoverColor: "group-hover:border-purple-500",
  },
  {
    name: "Hung Ngo",
    role: "Marketing Leader",
    bioKey: "about.team.hung.bio",
    image: test2.src,
    social: {
      twitter: "#",
      linkedin: "#",
      github: "#",
    },
    color: "from-emerald-400 to-emerald-600",
    borderColor: "border-emerald-400",
    borderHoverColor: "group-hover:border-emerald-500",
  },
  {
    name: "Son Minh",
    role: "Designer",
    bioKey: "about.team.son.bio",
    image: test3.src,
    social: {
      twitter: "#",
      linkedin: "#",
      github: "#",
    },
    color: "from-rose-400 to-rose-600",
    borderColor: "border-rose-400",
    borderHoverColor: "group-hover:border-rose-500",
  },
  {
    name: "Phu Minh",
    role: "Designer",
    bioKey: "about.team.phu.bio",
    image: test4.src,
    social: {
      twitter: "#",
      linkedin: "#",
      github: "#",
    },
    color: "from-blue-400 to-blue-600",
    borderColor: "border-blue-400",
    borderHoverColor: "group-hover:border-blue-500",
  },
];

const values = [
  {
    icon: "heroicons:light-bulb",
    title: t("about.values.innovation.title"),
    description: t("about.values.innovation.desc"),
  },
  {
    icon: "heroicons:user-group",
    title: t("about.values.team.title"),
    description: t("about.values.team.desc"),
  },
  {
    icon: "heroicons:heart",
    title: t("about.values.user.title"),
    description: t("about.values.user.desc"),
  },
];
---

<Layout
  title="About Us - Slice"
  currentPath={getLocalizedPath("/about", lang)}
  lang={lang}
>
  <section
    class="py-24 bg-linear-to-b from-cream-100 to-cream-50 dark:from-dark-900 dark:to-dark-950 relative overflow-hidden"
  >
    <div
      class="absolute top-0 right-0 w-[500px] h-[500px] bg-slice-400/10 rounded-full blur-3xl"
    >
    </div>
    <div
      class="absolute bottom-0 left-0 w-[400px] h-[400px] bg-purple-400/10 rounded-full blur-3xl"
    >
    </div>

    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-20">
        <div
          class="inline-flex items-center gap-2 px-4 py-2 bg-slice-100 dark:bg-slice-900/30 rounded-full text-slice-700 dark:text-slice-400 font-medium text-sm mb-6 opacity-0 animate-fade-in"
        >
          <Icon name="heroicons:user-group" class="w-4 h-4" />
          {t("about.badge")}
        </div>
        <h1
          class="section-title mb-6 opacity-0 animate-slide-up animation-delay-100"
        >
          {t("about.title")}
          <span class="gradient-text">{t("about.titleHighlight")}</span>
        </h1>
        <p
          class="section-subtitle mx-auto opacity-0 animate-slide-up animation-delay-200"
        >
          {t("about.subtitle")}
        </p>
      </div>
    </div>
  </section>

  <section class="py-20 bg-cream-50 dark:bg-dark-950">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div
        class="grid sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 gap-4 lg:gap-5"
      >
        {
          teamMembers.map((member, index) => (
            <div
              class="group relative opacity-0 animate-slide-up"
              style={`animation-delay: ${index * 100}ms`}
            >
              <div
                class={`relative rounded-xl overflow-hidden shadow-card group-hover:shadow-card-hover transition-all duration-500 border-2 border-transparent ${member.borderHoverColor} aspect-3/4`}
              >
                <img
                  src={member.image}
                  alt={member.name}
                  class="w-full h-full object-contain transition-transform duration-700 group-hover:scale-110"
                />
                <div class="absolute bottom-0 left-0 right-0 backdrop-blur-md bg-black/40 p-4">
                  <div class="flex flex-col items-center text-center">
                    <h3 class="font-display text-lg font-bold text-white mb-1">
                      {member.name}
                    </h3>
                    <p class="text-white/90 text-xs font-medium mb-2">
                      {member.role}
                    </p>
                    <p class="text-white/80 text-xs leading-relaxed mb-3">
                      {t(member.bioKey as any)}
                    </p>
                  </div>

                  <div class="flex justify-center gap-2 pt-3 border-t border-white/20">
                    <a
                      href={member.social.twitter}
                      class="w-8 h-8 bg-white/10 hover:bg-white/20 backdrop-blur-sm rounded-lg flex items-center justify-center text-white transition-all duration-300 group/social"
                      aria-label="Twitter"
                    >
                      <Icon
                        name="simple-icons:x"
                        class="w-4 h-4 transition-transform duration-300 group-hover/social:scale-110"
                      />
                    </a>
                    <a
                      href={member.social.linkedin}
                      class="w-8 h-8 bg-white/10 hover:bg-white/20 backdrop-blur-sm rounded-lg flex items-center justify-center text-white transition-all duration-300 group/social"
                      aria-label="LinkedIn"
                    >
                      <Icon
                        name="simple-icons:linkedin"
                        class="w-4 h-4 transition-transform duration-300 group-hover/social:scale-110"
                      />
                    </a>
                    <a
                      href={member.social.github}
                      class="w-8 h-8 bg-white/10 hover:bg-white/20 backdrop-blur-sm rounded-lg flex items-center justify-center text-white transition-all duration-300 group/social"
                      aria-label="GitHub"
                    >
                      <Icon
                        name="simple-icons:github"
                        class="w-4 h-4 transition-transform duration-300 group-hover/social:scale-110"
                      />
                    </a>
                  </div>
                </div>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <section class="py-24 bg-white dark:bg-dark-900">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="section-title mb-4">
          {t("about.values.title")}
          <span class="gradient-text">{t("about.values.titleHighlight")}</span>
        </h2>
        <p class="section-subtitle mx-auto">
          {t("about.values.subtitle")}
        </p>
      </div>

      <div class="grid md:grid-cols-3 gap-8">
        {
          values.map((value, index) => (
            <div class="text-center p-8 rounded-3xl bg-cream-50 dark:bg-dark-800 hover:bg-linear-to-br hover:from-slice-50 hover:to-cream-100 dark:hover:from-dark-700 dark:hover:to-dark-800 transition-all duration-500 group">
              <div class="w-20 h-20 bg-white dark:bg-dark-700 rounded-2xl flex items-center justify-center mx-auto mb-6 text-slice-500 shadow-card group-hover:shadow-glow group-hover:scale-110 transition-all duration-500">
                <Icon name={value.icon} class="w-8 h-8" />
              </div>
              <h3 class="font-display text-2xl font-bold text-dark-900 dark:text-cream-100 mb-4">
                {value.title}
              </h3>
              <p class="text-dark-500 dark:text-dark-400 leading-relaxed">
                {value.description}
              </p>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <section
    class="py-24 bg-linear-to-r from-dark-900 to-dark-950 text-white relative overflow-hidden"
  >
    <div class="absolute inset-0">
      <div
        class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[800px] h-[800px] bg-slice-500/10 rounded-full blur-3xl"
      >
      </div>
    </div>

    <div class="relative max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="font-display text-4xl md:text-5xl font-bold mb-6">
        {t("about.cta.title")}
        <span class="text-slice-400">{t("about.cta.titleHighlight")}</span>?
      </h2>
      <p class="text-xl text-dark-300 mb-10 max-w-2xl mx-auto">
        {t("about.cta.description")}
      </p>
      <a href="#" class="btn-primary">
        {t("about.cta.button")}
        <Icon name="heroicons:arrow-right" class="w-4 h-4 ml-2" />
      </a>
    </div>
  </section>
</Layout>
