---
import Layout from "../../layouts/Layout.astro";
import { Icon } from "astro-icon/components";
import {
  languages,
  useTranslations,
  getLocalizedPath,
  type Language,
} from "@/i18n";

export const prerender = true;

export function getStaticPaths() {
  return Object.keys(languages).map((lang) => ({
    params: { lang },
  }));
}

// Get lang from URL params (SSG-safe, no headers needed)
const { lang } = Astro.params as { lang: Language };
const t = useTranslations(lang);

const features = [
  {
    icon: "heroicons:bolt",
    title: t("home.features.fast.title"),
    description: t("home.features.fast.desc"),
  },
  {
    icon: "heroicons:heart",
    title: t("home.features.user.title"),
    description: t("home.features.user.desc"),
  },
  {
    icon: "heroicons:shield-check",
    title: t("home.features.secure.title"),
    description: t("home.features.secure.desc"),
  },
  {
    icon: "heroicons:paint-brush",
    title: t("home.features.design.title"),
    description: t("home.features.design.desc"),
  },
];

const stats = [
  { value: "50K+", label: t("home.stats.users") },
  { value: "99.9%", label: t("home.stats.uptime") },
  { value: "24/7", label: t("home.stats.support") },
  { value: "5â˜…", label: t("home.stats.rating") },
];
---

<Layout
  title="Slice - Building Apps That Matter"
  currentPath={getLocalizedPath("/", lang)}
  lang={lang}
>
  <section class="relative min-h-[90vh] flex items-center overflow-hidden">
    <div
      class="absolute inset-0 bg-linear-to-br from-cream-100 via-cream-50 to-slice-50 dark:from-dark-900 dark:via-dark-950 dark:to-dark-900"
    >
    </div>
    <div
      class="absolute top-20 right-0 w-[600px] h-[600px] bg-slice-400/20 rounded-full blur-3xl animate-pulse-slow"
    >
    </div>
    <div
      class="absolute bottom-0 left-0 w-[400px] h-[400px] bg-slice-300/20 rounded-full blur-3xl animate-pulse-slow animation-delay-200"
    >
    </div>

    <div class="absolute inset-0 opacity-30">
      <div
        class="absolute top-32 left-20 w-4 h-4 bg-slice-400 rounded-full animate-float"
      >
      </div>
      <div
        class="absolute top-48 right-32 w-6 h-6 bg-slice-300 rounded-full animate-float animation-delay-200"
      >
      </div>
      <div
        class="absolute bottom-32 left-1/3 w-3 h-3 bg-slice-500 rounded-full animate-float animation-delay-400"
      >
      </div>
      <div
        class="absolute top-1/2 right-1/4 w-5 h-5 bg-slice-400 rounded-full animate-float animation-delay-300"
      >
      </div>
    </div>

    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div class="space-y-8">
          <div
            class="inline-flex items-center gap-2 px-4 py-2 bg-slice-100 dark:bg-slice-900/30 rounded-full text-slice-700 dark:text-slice-400 font-medium text-sm opacity-0 animate-fade-in"
          >
            <span class="w-2 h-2 bg-slice-500 rounded-full animate-pulse"
            ></span>
            {t("home.badge")}
          </div>

          <h1
            class="font-display text-5xl md:text-6xl lg:text-7xl font-bold leading-tight opacity-0 animate-slide-up animation-delay-100"
          >
            {t("home.title")}
            <span class="block gradient-text">{t("home.titleHighlight")}</span>
          </h1>

          <p
            class="text-xl text-dark-500 dark:text-dark-300 max-w-xl leading-relaxed opacity-0 animate-slide-up animation-delay-200"
          >
            {t("home.description")}
          </p>

          <div
            class="flex flex-wrap gap-4 opacity-0 animate-slide-up animation-delay-300"
          >
            <a href={getLocalizedPath("/about", lang)} class="btn-primary">
              {t("home.meetTeam")}
              <svg
                class="w-4 h-4 ml-2"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
              </svg>
            </a>
            <a href={getLocalizedPath("/blogs", lang)} class="btn-outline">
              {t("home.readBlog")}
            </a>
          </div>
        </div>

        <div
          class="relative lg:pl-12 opacity-0 animate-scale-in animation-delay-400"
        >
          <div class="relative">
            <div
              class="absolute -inset-4 bg-linear-to-r from-slice-400 to-slice-600 rounded-3xl blur-2xl opacity-30 animate-pulse-slow"
            >
            </div>
            <div
              class="relative bg-white dark:bg-dark-800 rounded-3xl p-8 shadow-card-hover"
            >
              <div class="grid grid-cols-2 gap-4">
                <div
                  class="bg-linear-to-br from-slice-50 to-slice-100 dark:from-slice-900/30 dark:to-slice-800/30 rounded-2xl p-6 text-center"
                >
                  <div
                    class="w-12 h-12 bg-slice-500 rounded-xl mx-auto mb-3 flex items-center justify-center"
                  >
                    <svg
                      class="w-6 h-6 text-white"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"
                      ></path>
                    </svg>
                  </div>
                  <p
                    class="font-display font-bold text-dark-900 dark:text-cream-100"
                  >
                    {t("home.card.mobile")}
                  </p>
                </div>
                <div
                  class="bg-linear-to-br from-dark-50 to-dark-100 dark:from-dark-700 dark:to-dark-600 rounded-2xl p-6 text-center"
                >
                  <div
                    class="w-12 h-12 bg-dark-900 rounded-xl mx-auto mb-3 flex items-center justify-center"
                  >
                    <svg
                      class="w-6 h-6 text-white"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                      ></path>
                    </svg>
                  </div>
                  <p
                    class="font-display font-bold text-dark-900 dark:text-cream-100"
                  >
                    {t("home.card.web")}
                  </p>
                </div>
                <div
                  class="col-span-2 bg-linear-to-r from-slice-500 to-slice-600 rounded-2xl p-6 text-white"
                >
                  <div class="flex items-center gap-4">
                    <div
                      class="w-12 h-12 bg-white/20 rounded-xl flex items-center justify-center"
                    >
                      <svg
                        class="w-6 h-6"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                      >
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
                      </svg>
                    </div>
                    <div>
                      <p class="font-display font-bold text-lg">
                        {t("home.card.growing")}
                      </p>
                      <p class="text-white/80 text-sm">
                        {t("home.card.growingDesc")}
                      </p>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="py-20 bg-white dark:bg-dark-900">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
        {
          stats.map((stat, index) => (
            <div class="text-center">
              <p class="font-display text-4xl md:text-5xl font-bold gradient-text">
                {stat.value}
              </p>
              <p class="text-dark-500 dark:text-dark-400 mt-2">{stat.label}</p>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <section class="py-24 bg-cream-50 dark:bg-dark-950">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="section-title mb-4">
          {t("home.features.title")}
          <span class="gradient-text">{t("home.features.titleHighlight")}</span
          >?
        </h2>
        <p class="section-subtitle mx-auto">
          {t("home.features.subtitle")}
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
        {
          features.map((feature, index) => (
            <div class="card group hover:-translate-y-2">
              <div class="w-14 h-14 bg-slice-100 dark:bg-slice-900/30 rounded-2xl flex items-center justify-center text-slice-600 dark:text-slice-400 mb-6 group-hover:bg-slice-500 group-hover:text-white transition-all duration-300">
                <Icon name={feature.icon} class="w-6 h-6" />
              </div>
              <h3 class="font-display text-xl font-bold text-dark-900 dark:text-cream-100 mb-3">
                {feature.title}
              </h3>
              <p class="text-dark-500 dark:text-dark-400 leading-relaxed">
                {feature.description}
              </p>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <section
    class="py-24 bg-dark-900 dark:bg-dark-800 text-white relative overflow-hidden"
  >
    <div class="absolute inset-0 opacity-10">
      <div
        class="absolute top-0 left-0 w-96 h-96 bg-slice-500 rounded-full blur-3xl"
      >
      </div>
      <div
        class="absolute bottom-0 right-0 w-96 h-96 bg-slice-400 rounded-full blur-3xl"
      >
      </div>
    </div>

    <div class="relative max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="font-display text-4xl md:text-5xl font-bold mb-6">
        {t("home.cta.title")}
        <span class="text-slice-400">{t("home.cta.titleHighlight")}</span>?
      </h2>
      <p class="text-xl text-dark-300 mb-10 max-w-2xl mx-auto">
        {t("home.cta.description")}
      </p>
      <div class="flex flex-wrap justify-center gap-4">
        <a href={getLocalizedPath("/about", lang)} class="btn-primary">
          {t("home.cta.button")}
          <svg
            class="w-4 h-4 ml-2"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
          </svg>
        </a>
        <a
          href={getLocalizedPath("/faq", lang)}
          class="inline-flex items-center justify-center px-6 py-3 border-2 border-white/30 text-white font-medium rounded-full hover:bg-white/10 transition-all duration-300"
        >
          {t("home.cta.learnMore")}
        </a>
      </div>
    </div>
  </section>
</Layout>
