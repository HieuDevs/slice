---
import { Icon } from "astro-icon/components";
import {
  defaultLang,
  useTranslations,
  getLocalizedPath,
  type Language,
} from "@/i18n";
import { getNavLinks } from "@/routes";

interface Props {
  lang?: Language;
}

const { lang = defaultLang } = Astro.props;
const t = useTranslations(lang);
const currentYear = new Date().getFullYear();

const footerLinks = {
  product: getNavLinks(lang).map((link) => ({
    ...link,
    label: t(link.labelKey as any),
  })),
};
---

<footer
  class="bg-dark-900 dark:bg-dark-950 text-white border-t border-dark-800 dark:border-dark-800"
>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-12">
      <div class="md:col-span-2">
        <a
          href={getLocalizedPath("/", lang)}
          class="flex items-center gap-3 mb-6"
        >
          <div
            class="w-10 h-10 bg-linear-to-br from-slice-400 to-slice-600 rounded-xl flex items-center justify-center"
          >
            <Icon name="heroicons:cube" class="w-6 h-6 text-white" />
          </div>
          <span class="font-display text-2xl font-bold">Slice</span>
        </a>
        <p class="text-dark-300 max-w-md leading-relaxed">
          {t("footer.description")}
        </p>
        <div class="flex gap-4 mt-6">
          <a
            href="#"
            class="w-10 h-10 bg-dark-800 hover:bg-slice-500 rounded-full flex items-center justify-center transition-colors duration-300"
          >
            <Icon name="simple-icons:x" class="w-5 h-5" />
          </a>
          <a
            href="#"
            class="w-10 h-10 bg-dark-800 hover:bg-slice-500 rounded-full flex items-center justify-center transition-colors duration-300"
          >
            <Icon name="simple-icons:linkedin" class="w-5 h-5" />
          </a>
          <a
            href="#"
            class="w-10 h-10 bg-dark-800 hover:bg-slice-500 rounded-full flex items-center justify-center transition-colors duration-300"
          >
            <Icon name="simple-icons:github" class="w-5 h-5" />
          </a>
        </div>
      </div>

      <div>
        <h4 class="font-display font-semibold text-lg mb-4">
          {t("footer.navigation")}
        </h4>
        <ul class="space-y-3">
          {
            footerLinks.product.map((link) => (
              <li>
                <a
                  href={link.href}
                  class="text-dark-300 hover:text-slice-400 transition-colors duration-300"
                >
                  {link.label}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <div>
        <h4 class="font-display font-semibold text-lg mb-4">
          {t("footer.contact")}
        </h4>
        <ul class="space-y-3 text-dark-300">
          <li class="flex items-center gap-2">
            <Icon name="heroicons:envelope" class="w-5 h-5 text-slice-400" />
            hieubh130700@gmail.com
          </li>
          <li class="flex items-center gap-2">
            <Icon name="heroicons:map-pin" class="w-5 h-5 text-slice-400" />
            Ha Noi City, Viet Nam
          </li>
        </ul>
      </div>
    </div>

    <div
      class="border-t border-dark-800 mt-12 pt-8 flex flex-col md:flex-row justify-between items-center gap-4"
    >
      <p class="text-dark-400 text-sm">
        {t("footer.copyright").replace("{year}", String(currentYear))}
      </p>
      <div class="flex gap-6 text-sm text-dark-400">
        <a href="#" class="hover:text-slice-400 transition-colors"
          >{t("footer.privacy")}</a
        >
        <a href="#" class="hover:text-slice-400 transition-colors"
          >{t("footer.terms")}</a
        >
      </div>
    </div>
  </div>
</footer>
