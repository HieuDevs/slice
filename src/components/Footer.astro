---
import {
  defaultLang,
  useTranslations,
  getLocalizedPath,
  type Language,
} from "../i18n";

interface Props {
  lang?: Language;
}

const { lang = defaultLang } = Astro.props;
const t = useTranslations(lang);
const currentYear = new Date().getFullYear();

const footerLinks = {
  product: [
    { href: getLocalizedPath("/", lang), label: t("nav.home") },
    { href: getLocalizedPath("/blogs", lang), label: t("nav.blogs") },
    { href: getLocalizedPath("/about", lang), label: t("nav.about") },
    { href: getLocalizedPath("/faq", lang), label: t("nav.faq") },
  ],
};
---

<footer
  class="bg-dark-900 dark:bg-dark-950 text-white border-t border-dark-800 dark:border-dark-800"
>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-12">
      <div class="md:col-span-2">
        <a
          href={getLocalizedPath("/", lang)}
          class="flex items-center gap-3 mb-6"
        >
          <div
            class="w-10 h-10 bg-gradient-to-br from-slice-400 to-slice-600 rounded-xl flex items-center justify-center"
          >
            <svg
              class="w-6 h-6 text-white"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2.5"
            >
              <path
                d="M12 2L2 7l10 5 10-5-10-5z"
                stroke-linecap="round"
                stroke-linejoin="round"></path>
              <path
                d="M2 17l10 5 10-5"
                stroke-linecap="round"
                stroke-linejoin="round"></path>
              <path
                d="M2 12l10 5 10-5"
                stroke-linecap="round"
                stroke-linejoin="round"></path>
            </svg>
          </div>
          <span class="font-display text-2xl font-bold">Slice</span>
        </a>
        <p class="text-dark-300 max-w-md leading-relaxed">
          {t("footer.description")}
        </p>
        <div class="flex gap-4 mt-6">
          <a
            href="#"
            class="w-10 h-10 bg-dark-800 hover:bg-slice-500 rounded-full flex items-center justify-center transition-colors duration-300"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path
                d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"
              ></path>
            </svg>
          </a>
          <a
            href="#"
            class="w-10 h-10 bg-dark-800 hover:bg-slice-500 rounded-full flex items-center justify-center transition-colors duration-300"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path
                d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"
              ></path>
            </svg>
          </a>
          <a
            href="#"
            class="w-10 h-10 bg-dark-800 hover:bg-slice-500 rounded-full flex items-center justify-center transition-colors duration-300"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path
                d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
              ></path>
            </svg>
          </a>
        </div>
      </div>

      <div>
        <h4 class="font-display font-semibold text-lg mb-4">
          {t("footer.navigation")}
        </h4>
        <ul class="space-y-3">
          {
            footerLinks.product.map((link) => (
              <li>
                <a
                  href={link.href}
                  class="text-dark-300 hover:text-slice-400 transition-colors duration-300"
                >
                  {link.label}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <div>
        <h4 class="font-display font-semibold text-lg mb-4">
          {t("footer.contact")}
        </h4>
        <ul class="space-y-3 text-dark-300">
          <li class="flex items-center gap-2">
            <svg
              class="w-5 h-5 text-slice-400"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
              ></path>
            </svg>
            hello@slice.app
          </li>
          <li class="flex items-center gap-2">
            <svg
              class="w-5 h-5 text-slice-400"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
              ></path>
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
            San Francisco, CA
          </li>
        </ul>
      </div>
    </div>

    <div
      class="border-t border-dark-800 mt-12 pt-8 flex flex-col md:flex-row justify-between items-center gap-4"
    >
      <p class="text-dark-400 text-sm">
        {t("footer.copyright").replace("{year}", String(currentYear))}
      </p>
      <div class="flex gap-6 text-sm text-dark-400">
        <a href="#" class="hover:text-slice-400 transition-colors"
          >{t("footer.privacy")}</a
        >
        <a href="#" class="hover:text-slice-400 transition-colors"
          >{t("footer.terms")}</a
        >
      </div>
    </div>
  </div>
</footer>
