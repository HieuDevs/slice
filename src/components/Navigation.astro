---
import LanguageSwitcher from "./LanguageSwitcher.astro";
import ThemeToggle from "./ThemeToggle.astro";
import { Icon } from "astro-icon/components";
import {
  defaultLang,
  useTranslations,
  getLocalizedPath,
  getPathWithoutLang,
  type Language,
} from "@/i18n";
import { getNavLinks } from "@/routes";
import { PATH_MAP } from "@/routes/route";

interface Props {
  currentPath?: string;
  lang?: Language;
}

const { currentPath = "/", lang = defaultLang } = Astro.props;
const t = useTranslations(lang);

const navLinks = getNavLinks(lang).map((link) => ({
  ...link,
  label: t(link.labelKey as any),
}));

const currentPathWithoutLang = getPathWithoutLang(currentPath);
---

<nav
  class="fixed top-0 left-0 right-0 z-50 bg-cream-50/80 dark:bg-dark-900/80 backdrop-blur-lg border-b border-cream-300/50 dark:border-dark-700/50 transition-colors duration-300"
  style="view-transition-name: navigation;"
>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-20">
      <a
        href={getLocalizedPath("/", lang)}
        class="flex items-center gap-3 group"
      >
        <div
          class="w-10 h-10 bg-linear-to-br from-slice-400 to-slice-600 rounded-xl flex items-center justify-center shadow-glow group-hover:scale-110 transition-transform duration-300"
        >
          <Icon name="heroicons:cube" class="w-6 h-6 text-white" />
        </div>
        <span
          class="font-display text-2xl font-bold text-dark-900 dark:text-cream-100"
          >Slice</span
        >
      </a>

      <div class="hidden md:flex items-center gap-8">
        {
          navLinks.map((link) => (
            <a
              href={link.href}
              class:list={[
                "nav-link font-medium py-2",
                (currentPathWithoutLang === link.path ||
                  currentPathWithoutLang === link.path + "/") &&
                  "nav-link-active",
              ]}
            >
              {link.label}
            </a>
          ))
        }
        <a
          id="internal-nav-link"
          href={getLocalizedPath("/internal", lang)}
          class:list={[
            "nav-link font-medium py-2 hidden",
            currentPathWithoutLang === "/internal" && "nav-link-active",
          ]}
        >
          {t("internal.title")}
        </a>
      </div>

      <div class="hidden md:flex items-center gap-4">
        <ThemeToggle />
        <LanguageSwitcher />
        <button
          id="auth-btn"
          class="btn-primary flex items-center gap-2"
          data-get-started-text={t("nav.getStarted")}
          data-logout-text={t("nav.logout")}
        >
          <span id="auth-btn-text">{t("nav.getStarted")}</span>
          <Icon
            id="auth-btn-icon"
            name="heroicons:arrow-right"
            class="w-4 h-4"
          />
        </button>
      </div>

      <button
        id="mobile-menu-btn"
        class="md:hidden p-2 rounded-lg hover:bg-cream-200 dark:hover:bg-dark-700 transition-colors"
      >
        <Icon
          name="heroicons:bars-3"
          class="w-6 h-6 text-dark-900 dark:text-cream-100"
        />
      </button>
    </div>
  </div>

  <div
    id="mobile-menu"
    class="hidden md:hidden bg-cream-50 dark:bg-dark-900 border-t border-cream-200 dark:border-dark-700"
  >
    <div class="px-4 py-4 space-y-2">
      {
        navLinks.map((link) => (
          <a
            href={link.href}
            class:list={[
              "block px-4 py-3 rounded-xl font-medium transition-colors",
              currentPathWithoutLang === link.path ||
              currentPathWithoutLang === link.path + "/"
                ? "bg-slice-100 dark:bg-slice-900/30 text-slice-700 dark:text-slice-400"
                : "text-dark-600 dark:text-dark-300 hover:bg-cream-200 dark:hover:bg-dark-800 hover:text-dark-900 dark:hover:text-cream-100",
            ]}
          >
            {link.label}
          </a>
        ))
      }
      <a
        id="internal-nav-link-mobile"
        href={getLocalizedPath("/internal", lang)}
        class:list={[
          "block px-4 py-3 rounded-xl font-medium transition-colors",
          currentPathWithoutLang === "/internal"
            ? "bg-slice-100 dark:bg-slice-900/30 text-slice-700 dark:text-slice-400"
            : "text-dark-600 dark:text-dark-300 hover:bg-cream-200 dark:hover:bg-dark-800 hover:text-dark-900 dark:hover:text-cream-100",
        ]}
      >
        {t("internal.title")}
      </a>
      <div class="px-4 py-3 flex items-center gap-3">
        <ThemeToggle />
        <LanguageSwitcher />
      </div>
      <button
        id="auth-btn-mobile"
        class="btn-primary w-full mt-4 flex items-center justify-center gap-2"
        data-get-started-text={t("nav.getStarted")}
        data-logout-text={t("nav.logout")}
      >
        <span id="auth-btn-mobile-text">{t("nav.getStarted")}</span>
        <Icon
          id="auth-btn-mobile-icon"
          name="heroicons:arrow-right"
          class="w-4 h-4"
        />
      </button>
    </div>
  </div>
</nav>

<script>
  const mobileMenuBtn = document.getElementById("mobile-menu-btn");
  const mobileMenu = document.getElementById("mobile-menu");

  mobileMenuBtn?.addEventListener("click", () => {
    mobileMenu?.classList.toggle("hidden");
  });

  // Function to setup authentication button functionality
  function setupAuthButton() {
    const handleAuthClick = () => {
      const isLoggedIn = localStorage.getItem("isLoggedIn");

      if (isLoggedIn === "true") {
        // User is logged in - perform logout
        // Clear all user-related authentication data
        localStorage.removeItem("token");
        localStorage.removeItem("isLoggedIn");
        localStorage.removeItem("username");

        // Clear authentication cookie
        document.cookie =
          "token=; path=/; expires=Thu, 01 Jan 1970 00:00:00 GMT; SameSite=Lax";

        // Redirect to home page
        window.location.href = window.location.pathname.startsWith("/vi")
          ? "/vi"
          : "/en";
      } else {
        // User is not logged in - redirect to login
        window.location.href = window.location.pathname.startsWith("/vi")
          ? "/vi/login"
          : "/en/login";
      }
    };

    const authBtn = document.getElementById("auth-btn");
    const authBtnMobile = document.getElementById("auth-btn-mobile");

    authBtn?.addEventListener("click", handleAuthClick);
    authBtnMobile?.addEventListener("click", handleAuthClick);
  }

  // Function to update navigation based on login status
  function updateNavigation() {
    const isLoggedIn = localStorage.getItem("isLoggedIn");
    const authBtn = document.getElementById("auth-btn");
    const authBtnMobile = document.getElementById("auth-btn-mobile");
    const authBtnText = document.getElementById("auth-btn-text");
    const authBtnMobileText = document.getElementById("auth-btn-mobile-text");
    const authBtnIcon = document.getElementById("auth-btn-icon");
    const authBtnMobileIcon = document.getElementById("auth-btn-mobile-icon");
    const internalNavLink = document.getElementById("internal-nav-link");
    const internalNavLinkMobile = document.getElementById(
      "internal-nav-link-mobile"
    );

    if (isLoggedIn === "true") {
      // User is logged in - show "Logout" and show "Internal"
      const logoutText = authBtn?.getAttribute("data-logout-text") || "Logout";
      if (authBtnText) authBtnText.textContent = logoutText;
      if (authBtnMobileText) authBtnMobileText.textContent = logoutText;
      if (authBtnIcon)
        authBtnIcon.setAttribute("name", "heroicons:arrow-right-on-rectangle");
      if (authBtnMobileIcon)
        authBtnMobileIcon.setAttribute(
          "name",
          "heroicons:arrow-right-on-rectangle"
        );

      if (internalNavLink) {
        internalNavLink.classList.remove("hidden");
      }
      if (internalNavLinkMobile) {
        internalNavLinkMobile.classList.remove("hidden");
      }
    } else {
      // User is not logged in - show "Get Started" and hide "Internal"
      const getStartedText =
        authBtn?.getAttribute("data-get-started-text") || "Get Started";
      if (authBtnText) authBtnText.textContent = getStartedText;
      if (authBtnMobileText) authBtnMobileText.textContent = getStartedText;
      if (authBtnIcon)
        authBtnIcon.setAttribute("name", "heroicons:arrow-right");
      if (authBtnMobileIcon)
        authBtnMobileIcon.setAttribute("name", "heroicons:arrow-right");

      if (internalNavLink) {
        internalNavLink.classList.add("hidden");
      }
      if (internalNavLinkMobile) {
        internalNavLinkMobile.classList.add("hidden");
      }
    }
  }

  // Initialize functions
  setupAuthButton();

  // Update navigation on initial load
  updateNavigation();

  // Update navigation after view transitions
  document.addEventListener("astro:page-load", updateNavigation);
  document.addEventListener("astro:after-swap", updateNavigation);
</script>
