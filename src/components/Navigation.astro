---
import LanguageSwitcher from "./LanguageSwitcher.astro";
import ThemeToggle from "./ThemeToggle.astro";
import {
  defaultLang,
  useTranslations,
  getLocalizedPath,
  getPathWithoutLang,
  type Language,
} from "../i18n";

interface Props {
  currentPath?: string;
  lang?: Language;
}

const { currentPath = "/", lang = defaultLang } = Astro.props;
const t = useTranslations(lang);

const navLinks = [
  { href: getLocalizedPath("/", lang), label: t("nav.home"), path: "/" },
  {
    href: getLocalizedPath("/blogs", lang),
    label: t("nav.blogs"),
    path: "/blogs",
  },
  {
    href: getLocalizedPath("/about", lang),
    label: t("nav.about"),
    path: "/about",
  },
  { href: getLocalizedPath("/faq", lang), label: t("nav.faq"), path: "/faq" },
];

const currentPathWithoutLang = getPathWithoutLang(currentPath);
---

<nav
  class="fixed top-0 left-0 right-0 z-50 bg-cream-50/80 dark:bg-dark-900/80 backdrop-blur-lg border-b border-cream-300/50 dark:border-dark-700/50 transition-colors duration-300"
>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-20">
      <a
        href={getLocalizedPath("/", lang)}
        class="flex items-center gap-3 group"
      >
        <div
          class="w-10 h-10 bg-gradient-to-br from-slice-400 to-slice-600 rounded-xl flex items-center justify-center shadow-glow group-hover:scale-110 transition-transform duration-300"
        >
          <svg
            class="w-6 h-6 text-white"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2.5"
          >
            <path
              d="M12 2L2 7l10 5 10-5-10-5z"
              stroke-linecap="round"
              stroke-linejoin="round"></path>
            <path
              d="M2 17l10 5 10-5"
              stroke-linecap="round"
              stroke-linejoin="round"></path>
            <path
              d="M2 12l10 5 10-5"
              stroke-linecap="round"
              stroke-linejoin="round"></path>
          </svg>
        </div>
        <span
          class="font-display text-2xl font-bold text-dark-900 dark:text-cream-100"
          >Slice</span
        >
      </a>

      <div class="hidden md:flex items-center gap-8">
        {
          navLinks.map((link) => (
            <a
              href={link.href}
              class:list={[
                "nav-link font-medium py-2",
                (currentPathWithoutLang === link.path ||
                  currentPathWithoutLang === link.path + "/") &&
                  "nav-link-active",
              ]}
            >
              {link.label}
            </a>
          ))
        }
      </div>

      <div class="hidden md:flex items-center gap-4">
        <ThemeToggle />
        <LanguageSwitcher />
        <a href="/contact" class="btn-primary">
          {t("nav.getStarted")}
          <svg
            class="w-4 h-4 ml-2"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
          </svg>
        </a>
      </div>

      <button
        id="mobile-menu-btn"
        class="md:hidden p-2 rounded-lg hover:bg-cream-200 dark:hover:bg-dark-700 transition-colors"
      >
        <svg
          class="w-6 h-6 text-dark-900 dark:text-cream-100"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            id="menu-icon"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>
  </div>

  <div
    id="mobile-menu"
    class="hidden md:hidden bg-cream-50 dark:bg-dark-900 border-t border-cream-200 dark:border-dark-700"
  >
    <div class="px-4 py-4 space-y-2">
      {
        navLinks.map((link) => (
          <a
            href={link.href}
            class:list={[
              "block px-4 py-3 rounded-xl font-medium transition-colors",
              currentPathWithoutLang === link.path ||
              currentPathWithoutLang === link.path + "/"
                ? "bg-slice-100 dark:bg-slice-900/30 text-slice-700 dark:text-slice-400"
                : "text-dark-600 dark:text-dark-300 hover:bg-cream-200 dark:hover:bg-dark-800 hover:text-dark-900 dark:hover:text-cream-100",
            ]}
          >
            {link.label}
          </a>
        ))
      }
      <div class="px-4 py-3 flex items-center gap-3">
        <ThemeToggle />
        <LanguageSwitcher />
      </div>
      <a href="/contact" class="btn-primary w-full mt-4">
        {t("nav.getStarted")}
      </a>
    </div>
  </div>
</nav>

<script>
  const mobileMenuBtn = document.getElementById("mobile-menu-btn");
  const mobileMenu = document.getElementById("mobile-menu");

  mobileMenuBtn?.addEventListener("click", () => {
    mobileMenu?.classList.toggle("hidden");
  });
</script>
