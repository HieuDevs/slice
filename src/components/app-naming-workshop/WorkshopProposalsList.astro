---
interface Props {
  loadingText: string;
}

const { loadingText } = Astro.props;
---

<div
  class="lg:col-span-8 opacity-0 animate-fade-in"
  style="animation-delay: 300ms"
>
  <div class="mb-6 flex items-center justify-between">
    <div>
      <h2
        id="list-title"
        class="text-2xl md:text-3xl font-display font-bold text-dark-900 dark:text-cream-100"
      >
        {loadingText}
      </h2>
      <p
        class="text-sm text-dark-500 dark:text-dark-400 mt-1"
        id="list-subtitle"
      >
      </p>
    </div>
  </div>

  <div id="proposals-list" class="space-y-5">
    <!-- Proposals will be loaded here -->
  </div>
</div>
